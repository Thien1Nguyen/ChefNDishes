@model List<Dish>

@await Html.PartialAsync("_NavBar")

<div class="text-center container">
    <h1 class="display-4">Yum! Check out our tasty dishes!</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Chef</th>
                <th scope="col">Tastiness</th>
                <th scope="col">Calories</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Dish dish in Model)
        {
            <tr>
                <td>@dish.Name</td>
                <td>@dish.Creator.FirstName @dish.Creator.LastName </td>
                <td>@dish.Tastiness</td>
                <td>@dish.Calories</td>
            </tr>
        }
        </tbody>
    </table>
</div>
